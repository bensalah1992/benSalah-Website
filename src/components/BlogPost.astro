---
const { url, title, image } = Astro.props;
---

<li class="blog-post">
  <a href={url} class="post-link">
    <img src={image} alt={title} class="blog-post-image" />
    <h2 class="blog-post-title">{title}</h2>
  </a>
</li>

<style>
  .blog-post {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    transition: transform 0.2s ease;
  }

  .post-link:hover {
    transform: scale(1.03);
  }

  .blog-post-image {
    max-width: 100%;
    border-radius: 8px;
    height: 300px;
    object-fit: cover;
    aspect-ratio: 16 / 9;
  }

  .blog-post-title {
    margin-top: 10px;
    font-size: 1.7rem;
    color: #333;
  }

  @media (max-width: 768px) {
    .blog-post-title {
      font-size: 1.4rem;
      margin-top: 5px;
    }

    .blog-post-image {
      height: 200px;
    }
  }
</style>