<script>
  document.addEventListener('DOMContentLoaded', () => {
    const text = "Moin und Willkommen :)";
    const typewriterHeading = document.getElementById('typewriter-heading');
    const cursor = document.getElementById('cursor');
    const toggleBtn = document.getElementById('toggleBtn');
    const introParagraph = document.getElementById('intro-paragraph');
    const profilePic = document.querySelector('.profile-pic');
    let showingMore = false;
    let index = 0;

    // Text-Effekt f√ºr Typewriter
    function typeEffect() {
      if (index < text.length) {
        typewriterHeading.textContent += text[index];
        index++;
        setTimeout(typeEffect, 100);
      } else {
        cursor.classList.remove('hidden');
      }
    }

    // Startet Typewriter
    function startTypewriter() {
      typewriterHeading.classList.remove('hidden');
      cursor.classList.remove('hidden');
      typewriterHeading.textContent = ""; // Reset
      index = 0;
      typeEffect();
    }

    // Stoppt Typewriter
    function stopTypewriter() {
      typewriterHeading.classList.add('hidden');
      cursor.classList.add('hidden');
      typewriterHeading.textContent = "";
    }

    // Content-Toggle zwischen Intro und More
    const texts = {
      intro: {
        paragraph: `
          Ich bin Abdallah Ben-Salah,
          <br>
          leidenschaftlicher IT-Developer und Unternehmer aus dem sch√∂nen Hamburg.
