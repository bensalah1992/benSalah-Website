---
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = await Astro.glob('./posts/*.md');

const pageTitle = "";
---

<BaseLayout pageTitle={pageTitle}>
  <ul class="blog-grid">
    {allPosts.map((post) => (
      <li class="blog-post">
        <a href={post.url} class="post-link"> <!-- Link um das gesamte Blog-Post-Element -->
          <img src={post.frontmatter.image.url} alt={post.frontmatter.image.alt} />
          <h2 class="blog-post-title">{post.frontmatter.title}</h2>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>

<style>
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    list-style: none;
    padding: 0;
  }

  .blog-post {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    transition: transform 0.2s ease;
  }

  .post-link:hover {
    transform: scale(1.03);
  }

  .blog-post img {
    max-width: 100%;
    border-radius: 8px;
    height: 300px;
    object-fit: cover;
    aspect-ratio: 16 / 9;
  }

  .blog-post-title {
    margin-top: 10px;
    font-size: 1.7rem;
    color: #333;
  }

  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }

    .blog-post-title {
      font-size: 1.4rem;
      margin-top: 5px;
    }

    .blog-post img {
      height: 200px;
      aspect-ratio: 16 / 9;
    }
  }
</style>